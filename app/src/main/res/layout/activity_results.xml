<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_results"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.teamharambe.agris.aidll.Activities.ResultsActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/appbar_padding_top"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/resultsToolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:layout_scrollFlags="enterAlways"
            app:popupTheme="@style/AppTheme.PopupOverlay">

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:paddingTop="64dp">

        <RelativeLayout
            android:id="@+id/form_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:orientation="vertical"
                android:padding="10dp"
                android:weightSum="1">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/result"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/selected_car_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="TextView"
                    android:textColor="?android:attr/colorMultiSelectHighlight"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/selected_car_model"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="TextView"
                    android:textColor="?android:attr/colorPressedHighlight"
                    android:textSize="20sp" />

                <FrameLayout
                    android:layout_width="270dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1"
                    android:layout_height="142dp">


                    <ImageView
                        android:id="@+id/main_car_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@android:color/background_light" />

                    <ImageView
                        android:id="@+id/gold_medal"
                        android:layout_width="109dp"
                        android:layout_height="100dp"
                        app:srcCompat="@drawable/gold" />
                </FrameLayout>

                <LinearLayout
                    android:id="@+id/detailsPanel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="13dp"

                    android:layout_gravity="center_horizontal"
                    android:weightSum="1"
                    android:layout_alignParentStart="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center_horizontal"
                        android:layout_weight="0.5">

                        <TextView
                            android:id="@+id/priceLabel"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="@string/price"
                            android:textColor="@android:color/holo_green_dark"
                            android:textSize="15sp"
                            android:gravity="center_vertical" />

                        <TextView
                            android:id="@+id/priceText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/holo_green_light"
                            android:gravity="center_vertical" />

                        <TextView
                            android:id="@+id/doorsCountLabel"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/door_count"
                            android:textColor="@android:color/holo_green_dark"
                            android:textSize="15sp"
                            android:gravity="center_vertical" />

                        <TextView
                            android:id="@+id/doorsCountText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/holo_green_light"
                            android:gravity="center_vertical" />

                        <TextView
                            android:id="@+id/yearLabel"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/release_year"
                            android:textColor="@android:color/holo_green_dark"
                            android:textSize="15sp"
                            android:gravity="center_vertical" />

                        <TextView
                            android:id="@+id/yearText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/holo_green_light"
                            android:gravity="center_vertical" />

                        <TextView
                            android:id="@+id/powerLabel"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/power"
                            android:textColor="@android:color/holo_green_dark"
                            android:textSize="15sp"
                            android:gravity="center_vertical" />

                        <TextView
                            android:id="@+id/powerText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/holo_green_light"
                            android:gravity="center_vertical" />

                        <TextView
                            android:id="@+id/textView18"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/weight"
                            android:textColor="@android:color/holo_green_dark"
                            android:textSize="15sp"
                            android:gravity="center_vertical" />

                        <TextView
                            android:id="@+id/weightText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/holo_green_light"
                            android:gravity="center_vertical" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="0.5">

                        <TextView
                            android:id="@+id/bodyTypeLabel"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/body_type"
                            android:textColor="@android:color/holo_green_dark"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/bodyTypeText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/holo_green_light" />

                        <TextView
                            android:id="@+id/fuelTankLabel"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/fuel_tank_capacity"
                            android:textColor="@android:color/holo_green_dark"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/fuelTankText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/holo_green_light" />

                        <TextView
                            android:id="@+id/fuelTypeLabel"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/fuel_type"
                            android:textColor="@android:color/holo_green_dark"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/fuelTypeText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/holo_green_light" />

                        <TextView
                            android:id="@+id/topSpeedLabel"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/top_speed"
                            android:textColor="@android:color/holo_green_dark"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/topSpeedText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/holo_green_light" />

                        <TextView
                            android:id="@+id/maxWeightLabel"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/full_weight"
                            android:textColor="@android:color/holo_green_dark"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/maxWeightText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/holo_green_light" />
                    </LinearLayout>


                </LinearLayout>

                <TextView
                    android:id="@+id/honorable_mention_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="60sp"
                    android:text="@string/honorable_mention" />

                <TextView
                    android:id="@+id/honorable_mention_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TextView" />

                <FrameLayout
                    android:layout_width="200sp"
                    android:layout_height="130sp"
                    android:layout_gravity="center_horizontal">

                    <ImageView
                        android:id="@+id/honorable_car_image"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:srcCompat="@android:color/background_light" />

                    <ImageView
                        android:id="@+id/you_tried_medal"
                        android:layout_width="92dp"
                        android:layout_height="106dp"
                        app:srcCompat="@drawable/you_tried" />
                </FrameLayout>

            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
